<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fin"
    android:background="@drawable/fi"
    android:orientation="vertical">

    <TextView
        android:id="@+id/retour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/grey1"
        android:textColor="@color/gri"
        android:textSize="22dp"
        android:textStyle="bold" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Félicitation"
        android:layout_marginTop="-580dp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/gri"
        android:textSize="49dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:text="Vous avez terminée les exercices de ce jour"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="69dp"
        android:text=""
        android:backgroundTint="@color/white"
        android:background="@drawable/fit"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="29dp"
        android:textStyle="bold" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:text="Exercices"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="-153dp"
        android:text=""
        android:backgroundTint="@color/white"
        android:background="@drawable/fire"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="3dp"
        android:text="700"
        android:textColor="@color/white"
        android:textSize="29dp"
        android:textStyle="bold" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="12dp"
        android:text="Calories"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="-155dp"
        android:text=""
        android:backgroundTint="@color/white"
        android:background="@drawable/timer"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="234dp"
        android:layout_marginTop="3dp"
        android:text="00:03:30"
        android:textColor="@color/white"
        android:textSize="29dp"
        android:textStyle="bold" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="12dp"
        android:text="Minutes"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/pass"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#8DC24ED6"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="9dp"
            android:text="Recommencer"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/quitter"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="-46dp"
        android:backgroundTint="#8DC24ED6"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="9dp"
            android:text="Quitter"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


</LinearLayout>
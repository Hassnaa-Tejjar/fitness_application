<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Donkey_desc"
    android:background="@color/bag2"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animation"
        android:textColor="@color/grey1"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="10dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="330dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="230dp"
        android:src="@drawable/work14"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donkey kicks gauche"
        android:textColor="@color/grey1"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durée"
        android:textStyle="bold"
        android:textColor="@color/grey1"
        android:textSize="22dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/grey1"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-30dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bag2"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Pacez-vous à quatre pattes, les genoux alignés avec le bassin et les mains alignées avec les épaules. "
                android:textStyle="normal"
                android:layout_gravity="center"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:text="Levez la jambe gauche et contractez les fessiers autant que possible la même chôse pour la jambe droite"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="16dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>